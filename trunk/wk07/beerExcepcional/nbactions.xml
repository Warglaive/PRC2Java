<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-D user.lang=nl -D user.country=NL  pub.HablasEspañol  pub.HablasEspañol -classpath %classpath ${packageClassName} -Duser.lang=nl -D user.country=NL  pub.HablasEspañol -classpath %classpath pub.HablasEspañol</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -D user.lang=nl -D user.country=NL  pub.HablasEspañol  pub.HablasEspañol -classpath %classpath ${packageClassName} -Duser.lang=nl -D user.country=NL  pub.HablasEspañol -classpath %classpath pub.HablasEspañol</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-D user.lang=nl -D user.country=NL  pub.HablasEspañol  pub.HablasEspañol -classpath %classpath ${packageClassName} -Duser.lang=nl -D user.country=NL  pub.HablasEspañol -classpath %classpath pub.HablasEspañol</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>test</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test</goal>
            </goals>
            <properties>
                <user.lang>nl</user.lang>
                <user.country>NL</user.country>
            </properties>
        </action>
    </actions>
